            <Canvas x:Name="selectionCanvas" Grid.Column="0" Grid.Row="1">
                <Image x:Name="img" Stretch="UniformToFill" />
            </Canvas>
            <InkCanvas x:Name="inkCanvas" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" />

